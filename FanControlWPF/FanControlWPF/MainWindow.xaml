                    <Label Content="%"/>
                    <TextBox x:Name="Fan5RPM" Text="" Margin="5,0,5,0" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False"/>
